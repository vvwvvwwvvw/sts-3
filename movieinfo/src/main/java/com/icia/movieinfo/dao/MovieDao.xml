<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.icia.movieinfo.dao.MovieDao">
	<select id="getMovieList" resultType="movie">
		SELECT * FROM mlist
		LIMIT
		#{pageNum}, #{listCnt}
	</select>

	<insert id="insertMovie" parameterType="movie">
		INSERT INTO movietbl
		VALUES (null, #{m_name}, #{m_director}, #{m_nation},
		#{m_genre}, #{m_actor}, #{m_open},
		#{m_synopsis}, #{p_sysname})

	</insert>

	<select id="selectMovie" parameterType="Integer"
		resultType="movie">
		SELECT * FROM mlist
		WHERE m_code=#{m_code}
	</select>


	<update id="updateMovie" parameterType="movie">
		UPDATE movietbl
		SET
		m_name=#{m_name}, m_director=#{m_director},
		m_nation=#{m_nation}, m_genre=#{m_genre},
		m_actor=#{m_actor}, m_open=#{m_open},
		m_synopsis=#{m_synopsis}, p_sysname=#{p_sysname}
		WHERE m_code=#{m_code}

	</update>

	<delete id="deleteMovie" parameterType="Integer">
		DELETE FROM movietbl
		WHERE m_code = #{m_code}
	</delete>
</mapper>